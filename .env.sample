# Kalshi API (required for authenticated calls)
KALSHI_API_KEY=

# Private key: use either file path or PEM string
KALSHI_PRIVATE_KEY_PATH=
# KALSHI_PRIVATE_KEY_PEM="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# Set to true for demo environment (demo-api.kalshi.co)
KALSHI_DEMO=false

# Optional: override base URL (defaults to prod or demo based on KALSHI_DEMO)
# KALSHI_BASE_PATH=https://api.elections.kalshi.com/trade-api/v2

# --- Bot (Bitcoin up/down) ---
# KALSHI_BOT_SIDE=yes          # yes = up, no = down
# KALSHI_BOT_PRICE_CENTS=50    # limit price 1-99
# KALSHI_BOT_CONTRACTS=1
# KALSHI_BOT_MAX_MARKETS=15
# KALSHI_BOT_DRY_RUN=true      # no real orders

# --- Monitor (real-time UP/DOWN prices) ---
# KALSHI_MONITOR_INTERVAL_MS=2000
# KALSHI_MONITOR_TICKER=        # optional; default = first open BTC up/down market

# --- Arb (cross-platform: buy when sum in [ARB_SUM_LOW, ARB_SUM_THRESHOLD)) ---
# ARB_SUM_THRESHOLD=0.92      # upper bound; opportunity when sum < this
# ARB_SUM_LOW=0.75            # lower bound; ignore if sum < this (e.g. bad data)
# ARB_PRICE_BUFFER=0.01        # limit price = captured ask + this (better fill)
# ARB_SIZE=1                   # same token amount on both (Kalshi contracts = Poly shares); 1 = minimum for both platforms
# ARB_DRY_RUN=true             # if set, only log opportunity and orders, do not place

# --- Polymarket (optional; if unset, arb only places Kalshi orders) ---
# POLYMARKET_PRIVATE_KEY=      # wallet private key (hex with or without 0x)
# POLYMARKET_PROXY=            # Polymarket proxy/funder address
